<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/validation.js"></script>
</head>
<body>
    <h1>Contacts</h1>
    <section class="display">
        <div class="form-container">
            <% if (contactList.length === 0) { %>
                <h2>No contacts...</h2>
            <% } else { %>
                <% contactList.forEach(function(contact) { %>
                    <h2>Your contacts...</h2>
                    <form>
                        <div class="form-group">
                            <label for="firstname">First Name</label>
                            <%= contact.fnameDetails %>
                        </div>
                        <div class="form-group">
                            <label for "lastname">Last Name</label>
                            <%= contact.lnameDetails %>                           
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <%= contact.emailDetails %>                         
                        </div>
                        <div class="form-group">
                            <label for="phonenumber">Phone Number</label>
                            <%= contact.phonenoDetails %>                            
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <%= contact.addressDetails %>                          
                        </div>
                        <span class="button" onclick="toggleForm('<%= contact.contactId %>')"> Edit</span>
                        <br>
                        <span class="button" onclick="deleteContact('<%= contact.contactId %>')"> Delete</span>  
                    </form>
                <% }); %>
            <% } %>  
            <br>  
            <a href="/">Add More contacts</a>   
        </div>

        <% contactList.forEach(function(contact) { %>
            <form id="editForm_<%= contact.contactId %>" action="/edit/<%= contact.contactId %>" method="POST" style="display: none;" onsubmit="return validateForm()">
                <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input type="text" class="error" name="first_name" placeholder="Enter first name" value="<%= contact.first_name %>">
                    <span class="error-message" id="firstNameError"></span>
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name:</label>
                    <input type="text" class="error" name="last_name" placeholder="Enter last name"  value="<%= contact.last_name %>">
                    <span class="error-message" id="lastNameError"></span>
                </div>  
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="error" name="email" placeholder="Enter email"  value="<%= contact.email %>">
                    <span class="error-message" id="emailError"></span>
                </div>  
                <div class="form-group">
                    <label for="phonenumber">Phone Number:</label>
                    <input type="text" class="error" name="phone_number" placeholder="Enter phone number"  value="<%= contact.phone_number %>">
                    <span class="error-message" id="phoneNumberError"></span>
                </div>  
                <div class="form-group">
                    <label for="address">Address:</label>
                    <textarea name="address" class="error" placeholder="Enter your address..." value="<%= contact.address %>"></textarea>
                    <span class="error-message" id="addressError"></span>
                </div>  
                <div class="form-group">
                    <button class="button">Update Contact</button>                
                </div>
                <div class="form-group">
                    <button class="button" onclick="closeForm('<%= contact.contactId %>')">Close</button>
                </div> 
            </form>
        <% }); %>
    </section>
    
    <script src="/js/script.js"></script>
    

</body>
</html>